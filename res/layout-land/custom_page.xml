<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.much.CustomPage xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="13dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_free_app_store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/much_free_app_store_title"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="346dp"
                android:layout_height="146dp" >

                <com.android.launcher3.much.ui.widget.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/storeRecommendViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true" />

                <LinearLayout
                    android:id="@+id/storeRecommendDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/store_ad_right_1"
                    android:layout_width="150dp"
                    android:layout_height="73dp"
                    android:src="@drawable/store_ad_small1" />

                <ImageView
                    android:id="@+id/store_ad_right_2"
                    android:layout_width="150dp"
                    android:layout_height="73dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/store_ad_small2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="26dp" >

            <FrameLayout
                android:id="@+id/recommend_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_recommend_selector" />

                <TextView
                    style="@style/StoreMenuTitle"
                    android:text="@string/much_store_recommend_title" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/category_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_category_selector" />

                <TextView
                    style="@style/StoreMenuTitle"
                    android:text="@string/much_store_category_title" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/collection_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_collection_selector" />

                <TextView
                    style="@style/StoreMenuTitle"
                    android:text="@string/much_store_collection_title" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_search_selector" />

                <TextView
                    style="@style/StoreMenuTitle"
                    android:text="@string/much_store_search_title" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/manager_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_manage_selector" />

                <TextView
                    style="@style/StoreMenuTitle"
                    android:text="@string/much_store_manage_title" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/settings_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/store_settings_selector" />

                <TextView
                    style="@style/StoreMenuTitle"
                    android:text="@string/much_store_settings_title" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</com.android.launcher3.much.CustomPage>