<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.android.launcher3.BubbleTextView
        android:id="@+id/add_app"
        style="@style/WorkspaceIcon" />

    <ImageView
        android:id="@+id/app_selected"
        android:layout_width="@dimen/much_folder_add_app_selected_icon_size"
        android:layout_height="@dimen/much_folder_add_app_selected_icon_size"
        android:layout_gravity="top|right"
        android:visibility="invisible"
        android:src="@drawable/much_icon_folder_add_app_selected" />

</FrameLayout>